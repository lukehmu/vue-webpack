{
    "extends": [
        "plugin:vue/recommended",
        "airbnb-base",
    ],
    "plugins": [
        "vue"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "Framework": true
    },
    "rules": {
        "semi": [2, "never"],
        "no-console": "off",
        "linebreak-style": [0, "error", "windows"],
        //fixes an issue with Express
        "no-unused-vars": ["error", { "argsIgnorePattern": "next|value" }],
        "vue/html-self-closing": "off",
        "vue/html-closing-bracket-newline": ["error", {
            "singleline": "never",
            "multiline": "always"
          }],
    },
    "parserOptions": {
        "sourceType": "module",
        "parser": "babel-eslint"
    }
}
